#include<stdio.h>
int main(){
    int i,j,k,end;
    printf("Enter the value: \n");
    scanf("%d",&end);
    for(i=1;i<=end;i++){
    for(j=1;j<=end;j++){
             if(i>=j){
                 printf("%d",j);
             }
             else{
                 printf(" ");
             }
         }
    for(k=end-1;k>=1;k--){
            if(k<=i){
                printf("%d",k);
            }
                else{
                printf(" ");
            }
            }
        printf("\n");
    }
    return 0;
}
